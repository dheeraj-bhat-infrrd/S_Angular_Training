<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:batch="http://www.springframework.org/schema/batch"
	xsi:schemaLocation="
	http://www.springframework.org/schema/batch http://www.springframework.org/schema/batch/spring-batch-3.0.xsd
	http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
	<description>Batch jobs for the payment module.</description>

	<!-- Job and the required beans for it go here. -->
	
	<!-- This is the batch job for retrying payments. -->
	
	<batch:job id="paymentRetries">
		<batch:step id="checkLicenseDetailsTable">
			<batch:tasklet transaction-manager="transactionManager">
				<batch:chunk reader="paymentRetriesItemReader" processor="paymentRetriesItemProcessor" writer="paymentRetriesItemWriter" commit-interval="1">
				</batch:chunk>
			</batch:tasklet>
		</batch:step>
	</batch:job>
	
	<bean id="paymentRetriesItemReader"	class="org.springframework.batch.item.database.HibernateCursorItemReader">
		<property name="queryString" value= "from LicenseDetail as l inner join fetch l.company where l.isSubscriptionDue=1 and l.status=1 and l.nextRetryTime &lt; current_timestamp" />
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>

	<bean id="paymentRetriesItemWriter" class="com.realtech.socialsurvey.batch.writer.PaymentRetriesItemWriter"/>
	
	<bean id="paymentRetriesItemProcessor" class="com.realtech.socialsurvey.batch.processor.PaymentRetriesItemProcessor" />	
	
	<!-- This is the batch job for unsubscribing accounts. -->
	
	<batch:job id="unsubscribeAccounts">
		<batch:step id="checkDisabledAccountsTable">
			<batch:tasklet transaction-manager="transactionManager">
				<batch:chunk reader="unsubscribeAccountsItemReader" processor="unsubscribeAccountsItemProcessor" writer="unsubscribeAccountsItemWriter" commit-interval="1">
				</batch:chunk>
			</batch:tasklet>
		</batch:step>
	</batch:job>
	
	<bean id="unsubscribeAccountsItemReader" class="org.springframework.batch.item.database.HibernateCursorItemReader">
		<property name="queryString" value= "from DisabledAccount as d inner join fetch d.company inner join fetch d.licenseDetail where d.status=1 and d.disableDate &lt; current_timestamp" />
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>
	
	<bean id="unsubscribeAccountsItemWriter" class="org.springframework.batch.item.database.HibernateItemWriter" >
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>

	<bean id="unsubscribeAccountsItemProcessor" class="com.realtech.socialsurvey.batch.processor.UnsubscribeAccountsItemProcessor" />	
		
</beans>