<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:batch="http://www.springframework.org/schema/batch"
	xsi:schemaLocation="
	http://www.springframework.org/schema/batch http://www.springframework.org/schema/batch/spring-batch-3.0.xsd
	http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
	<description>Batch jobs for the payment module.</description>

	<!-- Job and the required beans for it go here. -->

	<batch:job id="paymentRetries">
		<batch:step id="checkLicenseDetailsTable">
			<batch:tasklet transaction-manager="transactionManager">
				<batch:chunk reader="databaseItemReader" processor="customItemProcessor" writer="databaseItemWriter" commit-interval="1">
				</batch:chunk>
			</batch:tasklet>
		</batch:step>
	</batch:job>
	
	<bean id="databaseItemReader"
		class="org.springframework.batch.item.database.HibernateCursorItemReader">
		<property name="queryString" value= "from LicenseDetail as l inner join fetch l.company where l.isSubscriptionDue=1 and l.nextRetryTime &lt; current_timestamp" />
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>

	<bean id="databaseItemWriter" class="com.realtech.socialsurvey.batch.writer.CustomItemWriter"/>
	
	<bean id="customItemProcessor" class="com.realtech.socialsurvey.batch.processor.CustomItemProcessor" />	



</beans>