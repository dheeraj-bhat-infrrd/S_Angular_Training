<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:batch="http://www.springframework.org/schema/batch"
	xsi:schemaLocation="
	http://www.springframework.org/schema/batch http://www.springframework.org/schema/batch/spring-batch-3.0.xsd
	http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
	<description>Batch jobs for Social Survey</description>
	
	<!-- Job and the required beans for it go here. -->
	
	<!-- This is the batch job for deleting unused logos. -->
	
	<batch:job id="logoDeletion">
		<batch:step id="deleteUnusedLogos">
			<batch:tasklet transaction-manager="transactionManager">
				<batch:chunk reader="logoDeletionItemReader" processor="logoDeletionItemProcessor" writer="logoDeletionItemWriter" commit-interval="1">
				</batch:chunk>
			</batch:tasklet>
		</batch:step>
	</batch:job>
	
	<bean id="logoDeletionItemWriter" class="com.realtech.socialsurvey.batch.writer.LogoDeletionItemWriter"/>
	
	<bean id="logoDeletionItemProcessor" class="com.realtech.socialsurvey.batch.processor.LogoDeletionItemProcessor" />
	
	<bean id="logoDeletionItemReader" class="com.realtech.socialsurvey.batch.reader.LogoDeletionItemReader" />
	
</beans>