<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:batch="http://www.springframework.org/schema/batch"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:task="http://www.springframework.org/schema/task" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/batch
	http://www.springframework.org/schema/batch/spring-batch-2.2.xsd
	http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
	http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context-3.2.xsd
	http://www.springframework.org/schema/task
        http://www.springframework.org/schema/task/spring-task-3.2.xsd">

 	<import resource="classpath:sscore-beans.xml" />
	<import resource="classpath:hibernate-config-batch.xml" />
	<import resource="classpath:/META-INF/spring/payment-batch-jobs.xml" />
	<import resource="classpath:/META-INF/spring/batch-jobs.xml" />

	<!-- JobRepository and JobLauncher are configuration/setup classes -->

	<bean id="jobRepository"
		class="org.springframework.batch.core.repository.support.MapJobRepositoryFactoryBean" />

	<bean id="jobLauncher"
		class="org.springframework.batch.core.launch.support.SimpleJobLauncher">
		<property name="jobRepository" ref="jobRepository" />
	</bean>

	<bean id="paymentRetriesJobRunner" class="com.realtech.socialsurvey.batch.jobs.PaymentRetriesJobRunner">
		<property name="job" ref="paymentRetries" />
	</bean>
	
	<bean id="unsubscribeAccountsJobRunner" class="com.realtech.socialsurvey.batch.jobs.UnsubscribeAccountsJobRunner">
		<property name="job" ref="unsubscribeAccounts" />
	</bean>
	
	<bean id="logoDeletionJobRunner" class="com.realtech.socialsurvey.batch.jobs.LogoDeletionJobRunner">
		<property name="job" ref="logoDeletion" />
	</bean>

	<!-- Run every 10 seconds -->
	<task:scheduled-tasks>
<!-- 		<task:scheduled ref="paymentRetriesJobRunner" method="run" cron="*/20 * * * * *" /> -->
		<!-- <task:scheduled ref="unsubscribeAccountsJobRunner" method="run" cron="*/20 * * * * *" /> -->
	 	<task:scheduled ref="logoDeletionJobRunner" method="run" cron="*/20 * * * * *"/>
	</task:scheduled-tasks>


</beans>
